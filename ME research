import { useState, useEffect } from 'react';

// Use this to get lucide-react icons, as direct imports may fail in some environments
const getLucideIcon = (name) => {
  const icons = {
    'CheckCircle': ({ className }) => <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" className={className}><path d="M22 11.08V12a10 10 0 1 1-5.93-8.07"/><path d="M22 4 12 14.01l-3-3"/></svg>,
    'Hammer': ({ className }) => <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" className={className}><path d="m15 12-8.37 8.37a2 2 0 1 1-3.46-3.46L11.54 8"/><path d="m17.65 15.65-3.35 3.35a2 2 0 1 1-3.46-3.46l3.35-3.35a2 2 0 1 1 3.46 3.46z"/><path d="m20.5 13.5-1 1"/><path d="m20.5 9.5-1 1"/><path d="m20.5 5.5-1 1"/></svg>,
    'Wrench': ({ className }) => <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" className={className}><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94-7.94l-3.78 3.78a1 1 0 0 0 0 1.4l6.4 6.4a1 1 0 0 0 1.4 0"/><path d="m21.2 13.4-1.4 1.4a1 1 0 0 1-1.4 0l-6.4-6.4a1 1 0 0 1 0-1.4l1.4-1.4a1 1 0 0 1 1.4 0l6.4 6.4a1 1 0 0 1 0 1.4z"/><path d="M5.5 20.5 2 22l1.5-3.5 3.5-3.5 2.5 2.5-3.5 3.5z"/></svg>,
    'ClipboardList': ({ className }) => <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" className={className}><rect width="8" height="4" x="8" y="2" rx="1" ry="1"/><path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/><path d="M12 11h4"/><path d="M12 15h4"/><path d="M8 11h.01"/><path d="M8 15h.01"/></svg>,
    'RefreshCcw': ({ className }) => <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" className={className}><path d="M21 12a9 9 0 0 0-9-9 9.75 9.75 0 0 0-6.75 2.85"/><path d="M3 12a9 9 0 0 0 9 9 9.75 9.75 0 0 0 6.75-2.85"/><path d="M6 6l-3 3-3 3"/><path d="M18 18l3-3 3-3"/></svg>
  };
  return icons[name];
};

